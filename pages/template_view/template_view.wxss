/* pages/template_view.wxss */
page{
  padding-bottom: 45px;
}
.cover{
  text-align: center;
  width: 100%;
  max-height:50%;
}
.panel{
  background: #fff; 
  padding:10px 15px;
  font-size: 12px;
  border-top: 1px solid #f5f5f5;
}
.template_title{
   font-size: 15px;
   text-align: center;
}
.title{
  font-size: 15px;
  margin-bottom: 5px;
  font-weight:bold;
}

.footer { position: fixed; width:100%; height: 45px; right: 0px; bottom: 0; background: #fff;z-index:999;
border-top:1px solid #FFCCCC;
padding-top:10px;
}
.use-totals{
  float: right;
  font-size:14px;
  height:35px; 
  line-height: 35px;
  margin-right: 15px;
}
.use-totals text{
  font-size:18px;
  color: #00CC33;
}
.use-template{
  float: right;
  background:linear-gradient(to right,#00CC33, #3366FF);
  color: #fff;
  border-radius: 15px; 
  padding:0px;
  width:150px;
  height:35px; 
  line-height: 35px;
  margin-right:5px;
}